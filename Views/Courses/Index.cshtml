@model List<CourseViewModel>;

<h1 class="display-4">@ViewData["Title"]</h1>

@foreach(CourseViewModel course in Model)
{
<div>

    <div class="row course">
        <div class="col-md-1">
            <img src="@course.ImagePath" width="50" />
        </div>
        <div class="col-md-5">
            <h2>@course.Title</h2>
            <author>@course.Author</author>
        </div>
        <div class="col-md-2 rating" title="@course.Rating">

            @for(int i = 1; i < 5; i++)
            {
                if(course.Rating >= i)
                {
                    <i class="fas fa-star"></i>
                }
                else if(course.Rating > i - 1)
                {
                    <i class="fas fa-star-half-alt"></i>
                }
                else
                {
                    <i class="far fa-star"></i>
                }
            }
        </div>
        <div class="col-md-2 price">
            EUR @course.CurrentPrice <br />
            
            @if(!course.FullPrice.Equals(course.CurrentPrice))
            {
                <s>EUR @course.FullPrice</s>
            }
        </div>
        <div class="col-md-2">
                <a class="btn btn-outline-primary" asp-area="" asp-controller="Courses" asp-action="Detail" asp-route-id="@course.Id">Dettaglio corso</a>       
        </div>
    </div>
</div>
}
